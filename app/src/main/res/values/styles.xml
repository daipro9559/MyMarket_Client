<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorText</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <!--<item provinceName="android:windowTranslucentStatus">true</item>-->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="ActivityAddItem" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="ActivityItemsTheme" parent="AppTheme">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="ActivityStandDetailTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textAppearance">@style/TextAppStyle</item>
    </style>

    <style name="SplashThem" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/bg_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="MapActivityTheme" parent="SplashThem">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>
    <style name="LoginThem" parent="SplashThem">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/bg_app_2</item>
    </style>

    <style name="RegisterStyle" parent="LoginThem">
        <item name="android:windowBackground">@drawable/bg_register</item>
    </style>

    <style name="SettingNotificationTheme" parent="AppTheme">
        <item name="colorAccent">@color/pink</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppStyle" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TextTabStyle" parent="TextAppStyle">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TitleToolbarStyle" parent="TextAppStyle">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextProfileScreen" parent="TextAppStyle">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/colorTextProfile</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:paddingLeft">@dimen/_5dp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="boxStrokeWidth">@dimen/_1dp</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="TextInputGrayLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:paddingLeft">@dimen/_5dp</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">@dimen/_.5dp</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:backgroundTint">@color/colorText</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:colorAccent">@color/colorText</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="EditTextInputStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textAppearance">@style/TextAppStyle</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
    </style>

    <style name="EditTextGrayInputStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textAppearance">@style/TextAppStyle</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:backgroundTint">@color/colorText</item>
        <item name="android:colorAccent">@color/colorText</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/TextAppStyle</item>
    </style>

    <style name="ButtonAppStyle" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_login</item>
        <item name="android:textAppearance">@style/TextAppStyle</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingRight">@dimen/_15dp</item>
        <item name="android:paddingLeft">@dimen/_15dp</item>
        <item name="android:minHeight">@dimen/_40dp</item>
    </style>

    <style name="ToolBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <!-- title text color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">?android:textColorPrimary</item>
        <item name="colorControlHighlight">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorPrimary</item>
        <item name="android:editTextColor">?android:textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorButtonRegister</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardElevation">@dimen/_3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/_5dp</item>
        <item name="contentPadding">@dimen/_5dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CardViewProfile" parent="CardViewStyle">
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">@dimen/_5dp</item>
    </style>

    <style name="DialogAppStyle" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextStyleProfileScreen" parent="TextAppStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_10dp</item>

    </style>

    <style name="RadioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/TextAppStyle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/_80dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@drawable/state_color_radio_button</item>
        <item name="android:background">@drawable/bg_radio_button</item>
    </style>
    
    <style name="ButtonMapStyle" parent="ButtonAppStyle">
        <item name="android:minHeight">@dimen/_20dp</item>
        <item name="android:minWidth">@dimen/_20dp</item>
        <item name="android:paddingLeft">@dimen/_8dp</item>
        <item name="android:paddingRight">@dimen/_8dp</item>
        <item name="android:paddingTop">@dimen/_3dp</item>
        <item name="android:paddingBottom">@dimen/_3dp</item>
        <item name="android:textSize">@dimen/_11sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
