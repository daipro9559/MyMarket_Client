<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="SplashThem" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name ="android:windowBackground" >@drawable/bg_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>
    <style name="LoginThem" parent="SplashThem">
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="TextAppStyle" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_15sp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#4c7e3d</item>
        <item name="colorControlHighlight">#544343</item>
    </style>
    <style name="EditTextInputStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textAppearance">@style/TextAppStyle</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#4c7e3d</item>
        <item name="colorControlHighlight">#544343</item>
    </style>
    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/TextAppStyle</item>
    </style>
    <style name="ButtonAppStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_login</item>
        <item name="android:textAppearance">@style/TextAppStyle</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_40dp</item>
    </style>
    <style name="ToolBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">?android:textColorPrimary</item>

        <item name="colorControlHighlight">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorPrimary</item>
        <item name="android:editTextColor">?android:textColorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ProgressStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorButtonRegister</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/_5dp</item>
        <item name="contentPadding">@dimen/_5dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
