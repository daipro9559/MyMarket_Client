<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="util"
            type="com.example.dainv.mymarket.util.Util" />

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="item"
            type="com.example.dainv.mymarket.model.Item" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:clickable="true"
        android:id="@+id/rootView"

        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150dp"
                    android:foreground="@drawable/foreground_image"
                    android:scaleType="center"
                    app:bindImage="@{imageUrl}"
                    app:riv_corner_radius="@dimen/_10dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtPrice"
                style="@style/TextAppStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/red"
                android:textSize="@dimen/_13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/cardImage" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title"
                style="@style/TextAppStyle"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@{item.name}"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTime"
                style="@style/TextAppStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="12:12 ngÃ y 10-11" />

        </android.support.constraint.ConstraintLayout>

        <include layout="@layout/load_more_layout"
            android:id="@+id/loadMoreProgress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            />
    </android.support.constraint.ConstraintLayout>
</layout>