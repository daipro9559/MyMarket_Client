<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="imageUrl"
            type="String" />
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/rootView"
        style="@style/CardViewStyle"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="0dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                app:riv_corner_radius="@dimen/_10dp"
                android:layout_width="@dimen/_110dp"
                android:layout_height="@dimen/_120dp"
                android:scaleType="center"
                app:bindImage="@{imageUrl}" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtName"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_5dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:textSize="@dimen/_15sp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@+id/image"
                app:layout_constraintRight_toLeftOf="@+id/txtNeedToSell" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/priceTitle"
                android:layout_marginTop="@dimen/_5dp"
                style="@style/TextAppStyle"
                app:layout_constraintTop_toBottomOf="@+id/txtName"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                android:text="@string/price_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtPrice"
                style="@style/TextAppStyle"
                android:textSize="@dimen/_13sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_orange"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/priceTitle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTime"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:textSize="@dimen/_11sp"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                tools:text="Ngày thực hiện: 12:12 ngày 10-11" />
            <android.support.v7.widget.AppCompatButton
                style="@style/ButtonAppStyle"
                android:id="@+id/btnInforUser"
                android:textSize="@dimen/_10sp"
                android:minHeight="@dimen/_25dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTime"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/information_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
        <include layout="@layout/load_more_layout"
            android:id="@+id/loadMoreProgress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:visibility="gone"
            />

    </android.support.v7.widget.CardView>
</layout>