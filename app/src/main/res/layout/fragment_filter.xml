<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        android:elevation="@dimen/_10dp"
        android:id="@+id/rootViewBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.example.dainv.mymarket.ui.items.MyBottomSheetBehavior">

        <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appBarFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <!--<android.support.design.widget.CollapsingToolbarLayout-->
                <!--android:id="@+id/collapsingLayoutFilter"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/colorPrimaryDark"-->
                <!--android:clickable="true"-->
                <!--app:contentScrim="?attr/colorPrimaryDark"-->
                <!--app:layout_scrollFlags="scroll|enterAlways"-->
                <!--app:titleEnabled="false">-->

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolBarBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    app:theme="@style/ToolBarThemeOverlay"
                    app:title="@string/setup_filter"
                    app:titleTextAppearance="@style/TitleToolbarStyle"
                    app:titleTextColor="@color/colorWhite" />
            <!--</android.support.design.widget.CollapsingToolbarLayout>-->
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10dp"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:animateLayoutChanges="true"
                android:paddingBottom="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleCategory"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setup_category" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardCategoryFilter"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleCategory">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/categoryFilter"
                        style="@style/TextAppStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="@string/all_category"
                        android:textAlignment="center" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleProvince"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/setup_select_province"
                    app:layout_constraintTop_toBottomOf="@+id/cardCategoryFilter" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardProvinceFilter"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleProvince">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/provinceFilter"
                        style="@style/TextAppStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="@string/all_province"
                        android:textAlignment="center" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.AppCompatTextView
                    android:visibility="gone"
                    android:id="@+id/titleDistrict"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/setup_select_district"
                    app:layout_constraintTop_toBottomOf="@+id/cardProvinceFilter" />

                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/cardDistrictFilter"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleDistrict">

                    <android.support.v7.widget.AppCompatTextView

                        android:id="@+id/districtFilter"
                        style="@style/TextAppStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="@string/all"
                        android:textAlignment="center" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleType"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_type_item"
                    app:layout_constraintTop_toBottomOf="@+id/cardDistrictFilter" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/radioGroupNeedToSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleType">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/needToSell"
                        style="@style/RadioButtonStyle"
                        android:layout_marginRight="@dimen/_10dp"
                        android:text="@string/need_to_sale" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/needToBuy"
                        style="@style/RadioButtonStyle"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="@string/need_to_buy" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titlePrice"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/filter_price"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroupNeedToSale" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/radioGroupFilterPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titlePrice">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/priceUp"
                        style="@style/RadioButtonStyle"
                        android:layout_marginRight="@dimen/_10dp"
                        android:text="@string/price_up"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/priceDown"
                        app:layout_constraintTop_toBottomOf="@+id/titlePrice" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/priceDown"
                        style="@style/RadioButtonStyle"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="@string/price_down"
                        app:layout_constraintBottom_toBottomOf="@+id/priceUp"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintLeft_toRightOf="@+id/priceUp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/priceUp"

                        />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleRangePrice"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/range_price_title"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroupFilterPrice" />

                <android.support.design.widget.TextInputLayout
                    android:orientation="horizontal"
                    android:id="@+id/txtLayoutPrice"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cardViewConvertPrice"
                    app:layout_constraintTop_toBottomOf="@+id/titleRangePrice">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtPriceFrom"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price_from"
                        android:inputType="number"
                        android:maxLines="3"
                        android:paddingStart="@dimen/_3dp"
                        android:singleLine="false"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <FrameLayout
                    android:id="@+id/cardViewConvertPrice"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_9dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:background="@drawable/bg_txt"
                    app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice"
                    app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtConvertPriceFrom"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/holo_red_light"
                        app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice"
                        app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice"
                        tools:text="1000000d" />
                </FrameLayout>

                <android.support.design.widget.TextInputLayout
                    android:orientation="horizontal"
                    android:id="@+id/txtLayoutPrice1"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cardViewConvertPrice1"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutPrice">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtPriceTo"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price_to"
                        android:inputType="number"
                        android:maxLines="3"
                        android:paddingStart="@dimen/_3dp"
                        android:singleLine="false"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <FrameLayout
                    android:id="@+id/cardViewConvertPrice1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_9dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:background="@drawable/bg_txt"
                    app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice1"
                    app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice1">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtConvertPriceTo"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/holo_red_light"
                        tools:text="1000000d" />
                </FrameLayout>

                <android.support.v7.widget.AppCompatButton
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_15dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutPrice1"
                    android:id="@+id/filter"
                    android:text="@string/filter"
                  style="@style/ButtonAppStyle"/>
                <android.support.v7.widget.AppCompatButton
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/filter"
                    android:id="@+id/saveFilter"
                    android:text="@string/save_filter"
                    style="@style/ButtonAppStyle"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>
