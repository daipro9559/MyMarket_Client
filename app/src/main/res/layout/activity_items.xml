<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp">

                <android.support.v7.widget.CardView
                    style="@style/CardViewStyle"
                    android:id="@+id/cardViewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:textCursorDrawable="@null"
                        android:id="@+id/edtSearch"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_search"
                        android:drawableLeft="@drawable/ic_search_primary"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="@string/search"
                        android:textColorHint="@color/colorItemUnSelect" />
                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/viewDivider1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_.5dp"
                    android:layout_marginLeft="@dimen/_30dp"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@color/colorWhite"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewSearch" />

                <android.support.v7.widget.CardView
                    style="@style/CardViewStyle"
                    android:id="@+id/cardViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/viewDivider1">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtAddress"
                        style="@style/TextAppStyle"
                        android:drawablePadding="@dimen/_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_location_primary"
                        android:text="Quận Đống Đa, Hà Nội"
                         />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginRight="@dimen/_10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cardViewTypeItem"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewAddress"
                    style="@style/CardViewStyle"
                    android:id="@+id/cardViewPrice"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="0.5"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtPrice"
                        android:text="@string/select_price_over"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="@dimen/_10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewAddress"
                    style="@style/CardViewStyle"
                    android:id="@+id/cardViewTypeItem"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="0.5"
                    app:layout_constraintLeft_toRightOf="@+id/cardViewPrice"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtTypeItem"
                        android:text="@string/select_type_item"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>

    </android.support.design.widget.CoordinatorLayout>
</layout>
