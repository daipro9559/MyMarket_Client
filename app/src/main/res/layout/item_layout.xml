<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.example.dainv.mymarket.model.Item"/>
        <variable
            name="imagePath"
            type="String"/>
    </data>

    <android.support.v7.widget.CardView
      style="@style/CardViewStyle"
        app:contentPadding="0dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.dainv.mymarket.viewcustom.ImageItem
                app:bindImage="@{imagePath}"
                app:layout_constraintRight_toLeftOf="@+id/txtName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/image"
                android:scaleType="center"
                android:src="@drawable/image_test"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_marginLeft="@dimen/_10dp"
                android:id="@+id/txtName"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/image"
                android:text="@{item.name}"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtPrice"
                style="@style/TextAppStyle"
                android:textSize="@dimen/_15sp"
                android:textColor="@android:color/holo_red_light"
                app:layout_constraintTop_toBottomOf="@+id/txtName"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                app:layout_constraintRight_toRightOf="parent"
                android:paddingRight="@dimen/_5dp"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/txtDescription"
                android:maxLines="2"
                android:textColor="@color/colorPrimary"
                style="@style/TextAppStyle"
                android:text="@{item.description}"
                android:textSize="@dimen/_11sp"
                android:ellipsize="marquee"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/txtAddress"
                android:maxLines="2"
                android:textColor="@color/colorPrimary"
                style="@style/TextAppStyle"
                android:textSize="@dimen/_11sp"
                android:ellipsize="marquee"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</layout>