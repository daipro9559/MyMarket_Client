<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.example.dainv.mymarket.model.Item" />

        <variable
            name="imagePath"
            type="String" />
        <variable
            name="isMyItems"
            type="Boolean"/>
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/rootView"
        style="@style/CardViewStyle"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="0dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image"
                    app:riv_corner_radius="@dimen/_10dp"
                    android:layout_width="@dimen/_110dp"
                    android:layout_height="@dimen/_120dp"
                    android:scaleType="center"
                    app:bindImage="@{imagePath}" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtName"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_5dp"
                android:text="@{item.name}"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@+id/image"
                app:layout_constraintRight_toLeftOf="@+id/txtNeedToSell" />
            <android.support.v7.widget.AppCompatTextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppStyle"
                android:padding="@dimen/_4dp"
                android:textSize="@dimen/_9sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/txtNeedToSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtPrice"
                style="@style/TextAppStyle"
                android:textSize="@dimen/_13sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_orange"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtDescription"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_1dp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="@{item.description}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtAddress"
                style="@style/TextAppStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@{item.address.address}"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTime"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:textColor="@color/colorTextTab"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:textSize="@dimen/_11sp"
                app:layout_constraintLeft_toRightOf="@+id/checkboxMark"
                app:layout_constraintLeft_toLeftOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtAddress"
                tools:text="12:12 ngÃ y 10-11" />

            <android.support.v7.widget.AppCompatCheckBox
                android:visibility="@{!isMyItems ? View.VISIBLE: View.GONE}"
                android:checked="@{item.isMarked? true :false}"
                android:id="@+id/checkboxMark"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_margin="@dimen/_5dp"
                android:button="@null"
                android:background="@drawable/bg_checkbox_mark"
                android:clickable="true"
                android:padding="@dimen/_5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <android.support.v7.widget.AppCompatImageView
                android:visibility="@{isMyItems ? View.VISIBLE: View.GONE}"
                android:id="@+id/iconEdit"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:padding="@dimen/_5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
        <include layout="@layout/load_more_layout"
            android:id="@+id/loadMoreProgress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:visibility="gone"
            />
    </android.support.v7.widget.CardView>

</layout>