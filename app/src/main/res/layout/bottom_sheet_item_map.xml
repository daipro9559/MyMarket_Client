<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    android:background="@color/colorWhite"
    style="@style/CardViewStyle"
    android:id="@+id/bottomSheetItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/horizontalViewPager"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp">
        </com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager>
        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppStyle"
            android:textStyle="bold"
            tools:text="Iphone 6s"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/txtName"
            android:textSize="@dimen/_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppStyle"
            tools:text="6 trieu dong"
            android:id="@+id/txtPrice"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppStyle"
            tools:text="Ban nhanh iphone 6s gia tot"
            android:id="@+id/txtDescription"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/blue_grey"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppStyle"
            tools:text="HÃ´m qua, 16h10"
            android:id="@+id/txtTime"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/colorTextProfile"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            style="@style/ButtonMapStyle"
            android:id="@+id/btnCallNow"
            android:text="@string/call_now"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            android:layout_marginLeft="@dimen/_10dp"
            style="@style/ButtonMapStyle"
            android:id="@+id/btnSendSMS"
            android:background="@drawable/bg_btn_follow"
            android:text="@string/send_message"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTime"
            app:layout_constraintLeft_toRightOf="@+id/btnCallNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            android:clickable="true"
            android:layout_marginLeft="@dimen/_10dp"
            style="@style/ButtonMapStyle"
            android:id="@+id/btnDetail"
            android:background="@drawable/bg_btn_normal"
            android:textColor="@color/colorText"
            android:text="@string/show_detail"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTime"
            app:layout_constraintLeft_toRightOf="@+id/btnSendSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>