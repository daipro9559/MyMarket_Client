<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <android.support.constraint.ConstraintLayout
        android:background="@color/colorPrimaryDark"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:padding="@dimen/_10dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/title"
            style="@style/TextAppStyle"
            android:textSize="@dimen/_18sp"
            android:text="@string/contact_to_user"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.LinearLayoutCompat
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:id="@+id/actionCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_phone"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp" />
            <android.support.v7.widget.AppCompatTextView
                style="@style/TextAppStyle"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:textSize="@dimen/_16sp"
                android:text="@string/action_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:padding="@dimen/_10dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/actionCall"
            android:id="@+id/actionSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/_20dp"
                android:src="@drawable/ic_sent_mail"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_20dp" />
            <android.support.v7.widget.AppCompatTextView
                style="@style/TextAppStyle"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/_10dp"
                android:padding="@dimen/_5dp"
                android:textSize="@dimen/_16sp"
                android:text="@string/action_send_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.constraint.ConstraintLayout>
</layout>
