<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_select_province"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.AppCompatTextView
        style="@style/TextAppStyle"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/lora_bold"
        android:text="@string/select_province_where_you_live"
        app:layout_constraintBottom_toTopOf="@+id/cardProvince"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:id="@+id/cardProvince"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_30dp"
        style="@style/CardViewStyle"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtProvince"
            android:padding="@dimen/_5dp"
            style="@style/TextAppStyle"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAlignment="center"
            android:text="@string/select_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/cardProvince"
        android:id="@+id/cardDistrict"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_30dp"
        style="@style/CardViewStyle"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:enabled="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAlignment="center"
            android:id="@+id/txtDistrict"
            android:padding="@dimen/_5dp"
            style="@style/TextAppStyle"
            android:text="@string/select_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/cardDistrict"
        android:layout_marginTop="@dimen/_10dp"
        android:id="@+id/cardAddress"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_30dp"
        style="@style/CardViewStyle"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edtAddress"
        android:padding="@dimen/_7dp"
        android:textAlignment="center"
        style="@style/EditTextStyle"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:hint="@string/input_address"
        android:textColorHint="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/letsGo"
        android:background="@drawable/bg_btn_follow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/_5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/_20dp"
        android:paddingRight="@dimen/_5dp"
        android:paddingTop="@dimen/_5dp"
        android:paddingBottom="@dimen/_5dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:layout_gravity="center_vertical"
            style="@style/TextAppStyle"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/colorWhite"
            android:text="@string/lets_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.LinearLayoutCompat>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loading"
        android:visibility="gone"
        style="@style/SpinKitView.Large.FadingCircle"
        android:background="@color/colorTransparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_13dp"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp" />
</android.support.constraint.ConstraintLayout>