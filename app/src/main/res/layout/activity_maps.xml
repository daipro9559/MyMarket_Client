<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!--<fragment-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:map="http://schemas.android.com/apk/res-auto"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:id="@+id/map"-->
    <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--tools:context=".ui.map.MapsActivity" />-->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    </com.google.android.gms.maps.MapView>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btnMapType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|left"
        android:layout_margin="@dimen/_10dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:padding="5dp"
        android:src="@drawable/ic_menu_map" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:src="@drawable/ic_my_location"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchor="@+id/mapView"
        app:layout_anchorGravity="bottom|right" />
    <android.support.v7.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/markerVirtual"
        app:layout_anchor="@+id/mapView"
        app:layout_anchorGravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_marker_select_position"
        android:layout_width="@dimen/_35dp"
        android:layout_height="@dimen/_35dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/_70dp"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:src="@drawable/ic_filter"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchor="@+id/mapView"
        app:layout_anchorGravity="bottom|right" />
    <android.support.v7.widget.AppCompatButton
        android:visibility="gone"
        style="@style/ButtonAppStyle"
        android:id="@+id/btnConfirmLocation"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/confirm"
        android:paddingLeft="@dimen/_30dp"
        android:paddingRight="@dimen/_30dp"
        android:layout_margin="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <include
        android:visibility="gone"
        android:id="@+id/loadingLayout"
        layout="@layout/dialog_loading"/>
    <include layout="@layout/bottom_sheet_filter_map" />
    <include layout="@layout/bottom_sheet_item_map" />
</android.support.design.widget.CoordinatorLayout>