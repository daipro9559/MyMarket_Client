<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetFilter"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardCategory"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="@dimen/_5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtCategory"
                style="@style/TextAppStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:padding="@dimen/_5dp"
                android:singleLine="true"
                android:text="@string/select_category"
                android:textAlignment="center" />
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleProvince"
            style="@style/TextAppStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/setup_select_province"
            app:layout_constraintTop_toBottomOf="@+id/cardCategory" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardProvinceFilter"
            style="@style/CardViewStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            app:layout_constraintTop_toBottomOf="@+id/titleProvince">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/provinceFilter"
                style="@style/TextAppStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:padding="@dimen/_5dp"
                android:singleLine="true"
                android:text="@string/all_province"
                android:textAlignment="center" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleDistrict"
            style="@style/TextAppStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/setup_select_district"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/cardProvinceFilter" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardDistrictFilter"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/titleDistrict">

            <android.support.v7.widget.AppCompatTextView

                android:id="@+id/districtFilter"
                style="@style/TextAppStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:padding="@dimen/_5dp"
                android:singleLine="true"
                android:text="@string/all"
                android:textAlignment="center" />
        </android.support.v7.widget.CardView>

