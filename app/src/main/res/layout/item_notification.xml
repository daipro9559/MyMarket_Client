<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="notification"
            type="com.example.dainv.mymarket.model.Notification"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootView"
        android:padding="@dimen/_8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            app:bindImage="@{notification.icon}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@drawable/avatar_demo"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp" />
        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppStyle"
            app:layout_constraintLeft_toRightOf="@+id/icon"
            android:layout_marginLeft="@dimen/_10dp"
            android:id="@+id/txtTitle"
            android:maxLines="2"
            android:text="@{notification.title}"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Dai Nguyen Van đã đăng một tin mới "
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtBody"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            app:layout_constraintLeft_toLeftOf="@+id/txtTitle"
            android:textSize="@dimen/_12sp"
            android:singleLine="true"
            android:text="@{notification.body}"
            android:ellipsize="marquee"
            android:layout_marginTop="@dimen/_5dp"
            tools:text="Cần bán iphone 8s "
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icTimer"
                android:src="@drawable/ic_clock"
                app:layout_constraintTop_toTopOf="@+id/txtTime"
                app:layout_constraintRight_toLeftOf="@+id/txtTime"
                app:layout_constraintBottom_toBottomOf="@+id/txtTime"
                android:layout_width="@dimen/_12dp"
                android:layout_height="@dimen/_12dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTime"
                android:textSize="@dimen/_10sp"
                android:layout_marginTop="@dimen/_3dp"
                app:layout_constraintTop_toBottomOf="@+id/txtBody"
                style="@style/TextAppStyle"
                android:textColor="@color/brown"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/btnConfirm"
                style="@style/ButtonAppStyle"
                android:minHeight="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:text="@string/confirm"
                android:padding="@dimen/_3dp"
                app:layout_constraintTop_toBottomOf="@+id/txtBody"
                app:layout_constraintLeft_toLeftOf="@+id/txtBody"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
        <include layout="@layout/load_more_layout"
            android:id="@+id/loadMoreProgress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </android.support.constraint.ConstraintLayout>
</layout>