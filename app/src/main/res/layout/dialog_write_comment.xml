<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_40dp"
    android:background="@color/colorTransparent"
    >

    <android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_30dp"
        android:background="@drawable/bg_dialog">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleDialog"
            style="@style/TextAppStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@drawable/bg_title_dialog"
            android:elevation="@dimen/_5dp"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sp"
            app:layout_constraintBottom_toTopOf="@+id/rootViewEdit"
            app:layout_constraintTop_toTopOf="@+id/rootViewEdit"
            android:text="@string/write_comment"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootViewEdit"
            android:minHeight="@dimen/_150dp"
            android:layoutMode="clipBounds"
            android:layout_marginTop="@dimen/_30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_recycleview_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_30dp"

            >
            <android.support.v7.widget.AppCompatEditText
                android:paddingRight="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:textCursorDrawable="@color/colorPrimaryDark"
                android:id="@+id/edtComment"
                style="@style/EditTextStyle"
                android:textColor="@color/colorText"
                android:hint="@string/input_comment"
                android:textColorHint="@color/blue_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:text="@string/cancel"
                style="@style/ButtonAppStyle"
                android:background="@drawable/bg_button_cancel"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintTop_toBottomOf="@+id/edtComment"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintRight_toLeftOf="@+id/btnConfirm"
                />
            <android.support.v7.widget.AppCompatButton
                app:layout_constraintHorizontal_weight="1"
                android:id="@+id/btnConfirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                style="@style/ButtonAppStyle"
                android:text="@string/comment"
                android:background="@drawable/bg_button_ok"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                app:layout_constraintLeft_toRightOf="@+id/btnCancel"
                app:layout_constraintTop_toBottomOf="@+id/edtComment"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>