<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/appBarLayout"
            layout="@layout/app_bar_layout" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_30dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30dp"
                android:animateLayoutChanges="true"
                android:padding="@dimen/_5dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleSelectImage"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_select_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleSelectImage"></android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.AppCompatCheckBox
                    android:checked="true"
                    android:visibility="gone"
                    android:id="@+id/checkboxDeleteOldImage"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_old_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppStyle"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerViewImage" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleNeedToSale"
                    style="@style/TextAppStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_to_sale_title"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@+id/checkboxDeleteOldImage" />

                <RadioGroup
                    android:id="@+id/radioGroupNeedToSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleNeedToSale">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioNeedToSell"
                        style="@style/RadioButtonStyle"
                        android:layout_marginRight="@dimen/_10dp"
                        android:checked="true"
                        android:text="@string/need_to_sale" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioNeedToBuy"
                        style="@style/RadioButtonStyle"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="@string/need_to_buy" />
                </RadioGroup>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardCategory"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radioGroupNeedToSale">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtCategory"
                        style="@style/TextAppStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="@string/select_category"
                        android:textAlignment="center" />
                </android.support.v7.widget.CardView>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutName"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardCategory">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtName"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="@string/name_item"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingStart="@dimen/_3dp"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutDescription"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutName">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtDescription"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/description_item"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:paddingStart="@dimen/_3dp"
                        android:singleLine="false"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutPrice"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cardViewConvertPrice"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutDescription">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtPrice"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price_item"
                        android:inputType="number"
                        android:maxLines="3"
                        android:paddingStart="@dimen/_3dp"
                        android:singleLine="false"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <FrameLayout
                    android:id="@+id/cardViewConvertPrice"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_9dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:background="@drawable/bg_txt"
                    app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice"
                    app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtConvertPrice"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/holo_red_light"
                        app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice"
                        app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice"
                        tools:text="1000000d" />
                </FrameLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleAddAddress"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/add_address"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutPrice" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardProvince"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titleAddAddress">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtProvince"
                        style="@style/TextAppStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="@string/select_province"
                        android:textAlignment="center" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardDistrict"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardProvince">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtDistrict"
                        style="@style/TextAppStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:enabled="false"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="@string/select_district"
                        android:textAlignment="center" />
                </android.support.v7.widget.CardView>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutAddress"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardDistrict">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtAddress"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="@string/input_address"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingStart="@dimen/_3dp"
                        android:textColor="@color/colorText"
                        android:textColorHighlight="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtCoordinatorTitle"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_coordinator"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutAddress" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:checked="true"
                    android:id="@+id/useAddressCurrent"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_height="wrap_content"
                    android:text="@string/use_current_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppStyle"
                    app:layout_constraintTop_toBottomOf="@+id/txtCoordinatorTitle" />
                <android.support.v7.widget.AppCompatTextView
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toTopOf="@+id/useAddressCurrent"
                    app:layout_constraintBottom_toBottomOf="@+id/useAddressCurrent"
                    app:layout_constraintLeft_toRightOf="@+id/useAddressCurrent"
                    style="@style/TextAppStyle"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/selectOnMap"
                    android:background="@drawable/bg_btn_normal"
                    android:layout_marginLeft="@dimen/_30dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingRight="@dimen/_10dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:drawableLeft="@drawable/ic_google_map"
                    android:text="@string/select_on_map"
                    android:drawablePadding="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnSell"
                    style="@style/ButtonAppStyle"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:text="@string/post_item"
                    app:layout_constraintTop_toBottomOf="@+id/useAddressCurrent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>