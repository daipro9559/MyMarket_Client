<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
       <include layout="@layout/app_bar_layout"
           android:id="@+id/appBarLayout"/>
        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:importantForAutofill="yes">
            <android.support.constraint.ConstraintLayout
                android:padding="@dimen/_5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleSelectImage"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/TextAppStyle"
                    android:text="@string/title_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@+id/titleSelectImage"
                    android:id="@+id/recyclerViewImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.AppCompatTextView
                    app:layout_constraintTop_toBottomOf="@+id/recyclerViewImage"
                    android:id="@+id/titleNeedToSale"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_to_sale_title"
                    android:textStyle="normal" />

                <RadioGroup
                    android:layout_marginTop="@dimen/_10dp"
                    android:id="@+id/radioGroupNeedToSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleNeedToSale">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:checked="true"
                        android:id="@+id/radioNeedToSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10dp"
                        android:button="@null"
                        android:textColor="@drawable/state_color_radio_button"
                        android:background="@drawable/bg_radio_button"
                        android:padding="@dimen/_10dp"
                        android:text="@string/need_to_sale" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioNeedToBuy"
                        android:textColor="@drawable/state_color_radio_button"
                        android:background="@drawable/bg_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:button="@null"
                        android:padding="@dimen/_10dp"
                        android:text="@string/need_to_buy" />
                </RadioGroup>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/_10dp"
                    style="@style/TextAppStyle"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroupNeedToSale"
                    android:id="@+id/titleSelectProvince"
                    android:text="@string/select_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>