<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
       <include layout="@layout/app_bar_layout"
           android:id="@+id/appBarLayout"/>
        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_30dp"
            >
            <android.support.constraint.ConstraintLayout
                android:animateLayoutChanges="true"
                android:padding="@dimen/_5dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_30dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleSelectImage"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/TextAppStyle"
                    android:text="@string/title_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleSelectImage"
                    android:id="@+id/recyclerViewImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.AppCompatTextView
                    app:layout_constraintTop_toBottomOf="@+id/recyclerViewImage"
                    android:id="@+id/titleNeedToSale"
                    style="@style/TextAppStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_to_sale_title"
                    android:textStyle="normal" />

                <RadioGroup
                    android:layout_marginTop="@dimen/_10dp"
                    android:id="@+id/radioGroupNeedToSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleNeedToSale">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:checked="true"
                        android:id="@+id/radioNeedToSell"
                      style="@style/RadioButtonStyle"
                        android:layout_marginRight="@dimen/_10dp"
                        android:text="@string/need_to_sale" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioNeedToBuy"
                        style="@style/RadioButtonStyle"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="@string/need_to_buy" />
                </RadioGroup>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardCategory"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    style="@style/CardViewStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/radioGroupNeedToSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtCategory"
                        android:padding="@dimen/_5dp"
                        style="@style/TextAppStyle"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textAlignment="center"
                        android:text="@string/select_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutName"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardCategory">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtName"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="@string/name_item"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingStart="@dimen/_3dp"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutDescription"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutName">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/description_item"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        style="@style/EditTextGrayInputStyle"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:paddingStart="@dimen/_3dp"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutPrice"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cardViewConvertPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutDescription">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtPrice"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price_item"
                        android:inputType="number"
                        android:singleLine="false"
                        android:maxLines="3"
                        android:paddingStart="@dimen/_3dp"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>
                <FrameLayout
                    android:background="@drawable/bg_txt"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:id="@+id/cardViewConvertPrice"
                    app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice"
                    app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/_9dp"
                    android:layout_height="0dp">
                <android.support.v7.widget.AppCompatTextView
                    tools:text="1000000d"
                    style="@style/TextAppStyle"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textColor="@android:color/holo_red_light"
                    app:layout_constraintLeft_toRightOf="@+id/txtLayoutPrice"
                    app:layout_constraintTop_toTopOf="@+id/txtLayoutPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/txtLayoutPrice"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/txtConvertPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </FrameLayout>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/_10dp"
                    style="@style/TextAppStyle"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutPrice"
                    android:id="@+id/titleAddAddress"
                    android:text="@string/add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:id="@+id/cardProvince"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    style="@style/CardViewStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/titleAddAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtProvince"
                    android:padding="@dimen/_5dp"
                    style="@style/TextAppStyle"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textAlignment="center"
                    android:text="@string/select_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/cardDistrict"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    style="@style/CardViewStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@id/cardProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:enabled="false"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textAlignment="center"
                        android:id="@+id/txtDistrict"
                        android:padding="@dimen/_5dp"
                        style="@style/TextAppStyle"
                        android:text="@string/select_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutAddress"
                    style="@style/TextInputGrayLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardDistrict">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtAddress"
                        style="@style/EditTextGrayInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="@string/input_address"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColorHighlight="@color/colorPrimary"
                        android:paddingStart="@dimen/_3dp"
                        android:textColor="@color/colorText" />
                </android.support.design.widget.TextInputLayout>
                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextAppStyle"
                    android:id="@+id/txtCoordinatorTitle"
                    android:text="@string/title_coordinator"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/useAddressCurrent"
                    app:layout_constraintTop_toBottomOf="@+id/txtCoordinatorTitle"
                    android:textAppearance="@style/TextAppStyle"
                    android:text="@string/use_current_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatButton
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/useAddressCurrent"
                   style="@style/ButtonAppStyle"
                    android:id="@+id/btnSell"
                    android:text="@string/sell_item"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>