                    <!--android:inputType="text"-->
                    <!--android:textColorHint="@color/colorItemUnSelect"-->
                    <!--android:textCursorDrawable="@null"-->
                    <!--android:visibility="gone" />-->
                    <!--</android.support.v7.widget.CardView>-->

                    <View
                        android:id="@+id/viewDivider1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_.5dp"
                        android:layout_marginLeft="@dimen/_19dp"
                        android:layout_marginRight="@dimen/_19dp"
                        android:background="@color/colorWhite"
                        app:layout_constraintTop_toBottomOf="@+id/toolBar" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardViewAddress"
                        style="@style/CardViewStyle"
                        android:layout_marginLeft="@dimen/_19dp"
                        android:layout_marginRight="@dimen/_19dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewDivider1">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtAddress"
                            style="@style/TextAppStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_primary"
                            android:drawablePadding="@dimen/_5dp"
                            android:text="Quận Đống Đa, Hà Nội" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardViewPrice"
                        style="@style/CardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_19dp"
                        android:layout_marginRight="@dimen/_10dp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/cardViewTypeItem"
                        app:layout_constraintTop_toBottomOf="@+id/cardViewAddress">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtPrice"
                            style="@style/TextAppStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_price_over" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardViewTypeItem"
                        style="@style/CardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_19dp"                        android:layout_marginTop="@dimen/_5dp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@+id/cardViewPrice"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardViewAddress">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txtTypeItem"
                            style="@style/TextAppStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_type_item" />
                    </android.support.v7.widget.CardView>
                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/_10dp"
            android:src="@drawable/ic_float_add_2"
            android:id="@+id/floatBtnAdd"
            app:backgroundTint="@color/colorFloatButton"
            app:fabSize="auto"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:elevation="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.design.widget.CoordinatorLayout>
</layout>
