<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_40dp"
    android:background="@color/colorTransparent"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_30dp"
        android:background="@drawable/bg_dialog">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleDialog"
            style="@style/TextAppStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@drawable/bg_title_dialog"
            android:elevation="@dimen/_5dp"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sp"
            app:layout_constraintBottom_toTopOf="@+id/recycleView"
            app:layout_constraintTop_toTopOf="@+id/recycleView"
            tools:text="@string/select_province" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layoutMode="clipBounds"
            android:layout_marginTop="@dimen/_30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_recycleview_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_30dp"
            >
        </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>

</FrameLayout>