<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="comment"
            type="com.example.dainv.mymarket.entity.Comment"/>
        <variable
            name="avatar"
            type="String"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootView"
        android:padding="@dimen/_8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                app:bindImage="@{avatar}"
                android:layout_margin="@dimen/_2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:src="@drawable/avatar_demo"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp" />
            <android.support.v7.widget.AppCompatTextView
                style="@style/TextAppStyle"
                app:layout_constraintLeft_toRightOf="@+id/imgAvatar"
                android:layout_marginLeft="@dimen/_10dp"
                android:id="@+id/txtUserName"
                android:maxLines="2"
                android:text="@{comment.User.name}"
                android:textColor="@color/colorPrimaryDark"
                tools:text="Dai Nguyen Van"
                android:layout_width="0dp"
                android:textSize="@dimen/_11sp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtComment"
                style="@style/TextAppStyle"
                app:layout_constraintTop_toBottomOf="@+id/txtUserName"
                app:layout_constraintLeft_toLeftOf="@+id/txtUserName"
                android:textSize="@dimen/_14sp"
                android:text="@{comment.comment}"
                android:layout_marginTop="@dimen/_5dp"
                tools:text="dai1995@gmail.com"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatImageView
                android:src="@drawable/ic_clock"
                app:layout_constraintBottom_toBottomOf="@+id/txtTime"
                android:layout_marginRight="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/txtTime"
                app:layout_constraintRight_toLeftOf="@+id/txtTime"
                android:id="@+id/icTimer"
                android:layout_width="@dimen/_12dp"
                android:layout_height="@dimen/_12dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTime"
                android:textSize="@dimen/_10sp"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintTop_toBottomOf="@+id/txtComment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                style="@style/TextAppStyle"
                android:textColor="@color/brown"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
        <include layout="@layout/load_more_layout"
            android:id="@+id/loadMoreProgress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </android.support.constraint.ConstraintLayout>
</layout>